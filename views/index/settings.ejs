<div class="modal" tabindex="-1" id="settingsModal" data-nosnippet>
    <div class="modal-dialog d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-check ps-0">
                    <label class="form-check-label" for="preferenceCopyFullLink"><b>Use Full Links</b></label>
                    <input class="form-check-input float-end" type="checkbox" name="preferenceCopyFullLink" id="preferenceCopyFullLink">
                </div>
                <div class="form-check ps-0 <% if (site.mode === "standalone") { %> d-none <% } %>">
                    <label class="form-check-label" for="preferenceCenterMapAsteroids"><b>Center Map on Asteroid Field</b></label>
                    <input class="form-check-input float-end" type="checkbox" name="preferenceCopyFullLink" id="preferenceCenterMapAsteroids">
                </div>
            </div>
        </div>
    </div>
</div>